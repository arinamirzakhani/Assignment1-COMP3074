<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Inputs -->
        <EditText
            android:id="@+id/etHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Number of hours worked" />

        <EditText
            android:id="@+id/etRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Hourly rate ($)" />

        <!-- Action -->
        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:layout_marginTop="12dp" />

        <!-- Results -->
        <TextView
            android:id="@+id/tvPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay (regular): $0.00"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/tvOvertime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overtime pay: $0.00" />

        <!-- NEW: gross (before tax) -->
        <TextView
            android:id="@+id/tvGross"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total (gross): $0.00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tax (18%): $0.00" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total (after tax): $0.00"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
